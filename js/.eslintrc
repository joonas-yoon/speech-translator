/* global chrome */
{
  "extends": ["eslint:recommended", "google", "prettier"],
  "plugins": ["prettier"],
  "ignorePatterns": ["build/", "*.min.js"],
  "rules": {
    "semi": ["error", "always"],
    "linebreak-style": ["error", "windows"],
    "require-jsdoc": ["off"],
    "no-console": ["off"]
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "webextensions": true
  }
}
