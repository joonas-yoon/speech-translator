{
  "name": "Speech Translator",
  "description": "Detect audio from your current tab and translate it.",
  "version": "1.3.0.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "js/jquery-3.3.1.min.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Translate!"
  },
  "content_scripts": [{
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/inject.js",
        "js/receiver.js"
      ]
    }
  ],
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "pages/options.html",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "tabCapture"
  ],
  "web_accessible_resources": ["style.css"]
}
